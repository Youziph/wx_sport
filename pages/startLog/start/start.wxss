.startBody{
  width: 100vw;
  height: 100vh;
  background-color: #ccc;
  position: relative
}

.startBody .start{
  box-shadow: 0px 0px 10px .8px #f2f2f2;
  border-radius: 5px;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 80vw;
  height: 50vh; 
  transform: translate(-50%, -50%);
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.startBody .start .top{
  width: 50px;
  height: 50px;
  margin-left: 1rem;
  margin-top: 1rem;
   border: 1px solid gray;    
  position: relative;
}
.startBody .start .top::before{
  position: absolute;
  content: '';
  bottom: 0px;
  width: 50.71px;
  margin: 0px 10px;
  height: 0px;
  border: .6px solid #000;
      transform:rotate(-45deg);    
     transform-origin: -10px; 
  /* border-left: 3px solid transparent;
  border-right: 3px solid transparent; */
}
.startBody .start .top::after{
  position: absolute;
  content: '';
  bottom: 0px;
  width: 50.71px;
  margin: 0px 10px;
  height: 0px;
  border: .6px solid #000;
          transform:rotate(45deg);     
       transform-origin: 105%;      
  /* border-left: 3px solid transparent;
  border-right: 3px solid transparent; */
}
.startBody .start .top .flag{
  width: 8px;
  height: 16px;
  border: 1px solid #000;
  position: relative;
}

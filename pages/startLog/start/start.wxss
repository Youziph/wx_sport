/* pages/startLog/start/start.wxss */
.startBody{
  width: 100vw;
  height: 100vh;
  background-color: #ccc;
  position: relative
}

.startBody .start{
  box-shadow: 0px 0px 10px .8px #f2f2f2;
  border-radius: 5px;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 80%;
  height: 60vh;
  transform: translate(-50%, -50%);
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.startBody .start .top{
  /* margin-top: 3rem; */
  margin-left: .5rem;
  font-size: 30px;
}
.startBody .start .middle{
  width: 62%;
  /* height: 40%; */
  text-align: center;
  margin: 0 auto;
}
.startBody .start .middle .word{
     text-align: left;
  /* padding-left: 25rpx;      */
     /* width: 103px;    */
}
image{
  width: 150rpx;
  height: 150rpx;
}
 .startBody .start .middle .img{
  margin: 0 auto;
  margin-top: 2rem;
  width: 150rpx;
} 
 
.startBody .start .middle .img .cover{
  width: 0rpx;
  overflow: hidden;
  animation: move 1s forwards infinite;
}   

 @keyframes move{
  to{
    width: 150rpx;
  }
} 

.startBody .start .bottom{
  text-align: right;
  margin-right: 20rpx;
}

.startBody .start .bottom .bottom-top{
  font-size: 13px;
  /* margin-bottom: 20rpx; */
}

.startBody .start .bottom .bottom-right{
   margin: 20rpx 0rpx 20rpx 0; 
  /* padding: 1px 3px; */
  /* border: 1px solid #ccc; */
  border-radius: 5px;
  display: inline; 
  /* padding-bottom: 2px; */
  /* cursor: pointer; */
}